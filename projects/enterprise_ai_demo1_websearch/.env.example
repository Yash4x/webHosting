# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-api-key-here

# Optional: Set a different base URL if using a proxy
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Set default model
# OPENAI_MODEL=gpt-4o-mini

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production

# Flask Security (REQUIRED)
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_this_to_a_random_secret_key_in_production

# Database Configuration (PostgreSQL)
POSTGRES_DB=aiimages
POSTGRES_USER=aiuser
POSTGRES_PASSWORD=change_this_to_a_secure_password
DATABASE_URL=postgresql://aiuser:change_this_to_a_secure_password@postgres:5432/aiimages

# Logging Configuration (Enterprise-grade logging)
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory (logs are rotated automatically)
LOG_DIR=logs

# Log format: text (human-readable) or json (for log aggregation tools)
LOG_FORMAT=text

# Docker Hub Configuration (for CI/CD deployment)
# Only needed for production deployment
DOCKERHUB_USERNAME=your-dockerhub-username
